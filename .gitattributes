# Ensure consistent line endings
* text=auto

# Force LF line endings for source files (cross-platform safe)
*.c     text eol=lf
*.h     text eol=lf
*.cpp   text eol=lf
*.cc    text eol=lf
*.swift text eol=lf
*.java  text eol=lf
*.cs    text eol=lf
*.dart  text eol=lf
*.yaml  text eol=lf
*.yml   text eol=lf
*.json  text eol=lf
*.html  text eol=lf
*.css   text eol=lf
*.js    text eol=lf
*.ts    text eol=lf
*.cmake text eol=lf
*.md    text eol=lf
*.lock  text eol=lf
*.sh    text eol=lf
*.bat   text eol=crlf

# Binary files - don't convert line endings
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.pdf   binary
*.zip   binary
*.exe   binary
*.dll   binary
*.so    binary
*.a     binary

# Flutter-specific files
pubspec.lock   text eol=lf
*.dart_tool    text eol=lf

# ESP-IDF-specific files
*.ld    text eol=lf
*.S     text eol=lf

# Git ignore files themselves
.gitattributes text eol=lf
.gitignore     text eol=lf